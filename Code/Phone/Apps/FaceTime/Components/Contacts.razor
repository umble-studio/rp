@namespace Rp.Phone.Apps.FaceTime.Components
@using System
@using Rp.Phone.UI.Components
@using Rp.Phone.Apps.Messages.Components
@inherits Sandbox.UI.Panel

<root class="@Root">
	<MessageBar @ref="_navigationBar">
		<Content>
			<div class="header">
				<div class="left">
					<Button Icon="fluent:add-16-filled"></Button>
				</div>
				<div class="right">
					<Button Text="Edit"></Button>
				</div>
			</div>
			<div class="footer">
				<span>Favorites</span>
			</div>
		</Content>
	</MessageBar>
	<div class="contact-container">
		@foreach ( var contact in Phone.Current.Contacts.All )
		{
			if ( contact.IsMe() ) continue;

			<div @key="@contact" class="contact" @onclick="@( () => OnSelectContact( contact ) )">
				<div class="avatar-container">
					@if ( !string.IsNullOrEmpty( @contact.ContactAvatar ) )
					{
						<img src="@contact.ContactAvatar" alt="avatar_02">
					}
					else
					{
						<span class="initials">@contact.ContactName[..1]</span>
					}
				</div>
				<div class="content-container">
					<span class="name">@contact.ContactName</span>
					<div class="info">
						<iconify icon="fluent:call-16-filled" size="18" color="black"></iconify>
						<span class="type">FaceTime</span>
					</div>
				</div>
				<div class="icon-container">
					<iconify icon="fluent:info-24-regular" size="24" color="dodgerblue"></iconify>
				</div>
			</div>
		}
	</div>
	<div class="navigation-bar">
		<div class="nav-button">
			<iconify icon="fluent:star-28-filled" color="dodgerblue" size="30"></iconify>
			<span>Favorite</span>
		</div>
		<div class="nav-button">
			<iconify icon="fluent:clock-16-filled" color="dodgerblue" size="30"></iconify>
			<span>Recent</span>
		</div>
		<div class="nav-button">
			<iconify icon="fluent:people-32-filled" color="dodgerblue" size="30"></iconify>
			<span>Contacts</span>
		</div>
		<div class="nav-button">
			<iconify icon="fluent:grid-dots-28-filled" color="dodgerblue" size="30"></iconify>
			<span>Keypad</span>
		</div>
	</div>
</root>
